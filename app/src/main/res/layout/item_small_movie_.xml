<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.dispositivosmoveis.watchfilmes.repository.models.ReleasedMovie" />

        <variable
            name="clickListener"
            type="com.dispositivosmoveis.watchfilmes.ui.home.SmallMovieListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_margin="12dp"
        android:background="@color/colorMercury"
        android:onClick="@{() -> clickListener.onClick(movie)}">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:imageUrl="@{movie.posterPath}"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/ic_placeholder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>